{
    "id": "215336f0-1a23-11e9-9f32-35e3a49c38e6",
    "name": "MuleAPIPromotion",
    "friendlyName": "Anypoint RTF Cloud Deploy",
    "description": "Deploy to AnyPoint CloudHub",
    "helpMarkDown": "",
    "category": "Deploy",
    "author": "Anil Konakala",
    "version": {
        "Major": 3,
        "Minor": 1,
        "Patch": 1
    },
    "instanceNameFormat": "Deploying Application to AnyPoint",
    "groups": [
        {
            "name": "appConfig",
            "displayName": "New App Configuration",
            "isExpanded": true
        },
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "username",
            "type": "string",
            "label": "AnyPoint Username",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The AnyPoint username"
        },
        {
            "name": "password",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The password variable name defined in the variables section of the build definition"
        },
        {
            "name": "domainname",
            "type": "string",
            "label": "Domain Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Name of the application to deploy to (e.g. mstest)"
        },
         {
            "name": "environmentname",
            "type": "string",
            "label": "Environment Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "e.g. dev, test, prod"
        },
        {
            "name": "apiAutoDiscoveryID",
            "type": "string",
            "label": "API AUTO DISCOVERY ID",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "e.g. 1204567"
        },
        {
            "name": "exchangeAssetName",
            "type": "string",
            "label": "Exchange Asset Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "can found in the exchange usually name of the API in Design Center"
        },
        {
            "name": "zipfilename",
            "type": "string",
            "label": "Zip File Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Name of the zip file to deploy"
        },
        {
            "name": "zipfiledirectory",
            "type": "filePath",
            "label": "Zip File Directory",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The folder the file is stored on"
        },
        {
            "name": "timeout",
            "type": "string",
            "label": "Timeout Minutes",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The length of time in seconds to wait for the application to start before the task times out"
        },
        {
            "name": "workersize",
            "type": "pickList",
            "label": "Worker Size",
            "groupName": "appConfig",
            "defaultValue": "Medium",
            "options": {
                "Micro": "Micro - 0.1 vCores, 500 MB Memory",
                "Small": "Small - 0.2 vCores, 1 GB Memory",
                "Medium": "Medium - 1 vCore, 1.5 GB Memory",
                "Large": "Large - 2 vCores, 3.5 GB Memory",
                "xLarge": "xLarge - 4 vCores, 7.5 GB Memory"
            },
            "required": false,
            "helpMarkDown": "The size of each worker allocated to a new application"
        },
        {
            "name": "workercount",
            "type": "string",
            "label": "Worker Count",
            "groupName": "appConfig",
            "defaultValue": "1",
            "required": false,
            "helpMarkDown": "Number of workers to allocate to a new application"
        },
        {
            "name": "properties",
            "type": "string",
            "label": "Application Properties",
            "groupName": "appConfig",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Comma-separated list of Key:Value pairs. e.g. 'prop1:my prop 1 value, mySecondProp: 2.3.4, prop3:etc'"
        },
         {
            "name": "autostart",
            "type": "pickList",
            "label": "Autostart Application",
            "groupName": "appConfig",
            "defaultValue": "true",
            "options": {
                "true": true,
                "false": false
            },
            "required": false,
            "helpMarkDown": "Determines if the application will automatically start once deployed"
        },
        {
            "name": "workermuleversion",
            "type": "string",
            "label": "Mule Runtime Version",
            "groupName": "appConfig",
            "defaultValue": "3.7.0",
            "required": false,
            "helpMarkDown": "The Mule Runtime Version to be used by the workers"
        },
         {
            "name": "workerregion",
            "type": "string",
            "label": "Worker Region",
            "groupName": "appConfig",
            "defaultValue": "us-east-1",
            "required": false,
            "helpMarkDown": "The region the application will be deployed to"
        }
       
    ],
   
    "execution": {
        "Node": {
            "target": "index.js"
        }
    }
}